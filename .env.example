MOTION_API_KEY=your_motion_api_key_here
PORT=3000
NODE_ENV=development

# Tool configuration (optional)
# Options: minimal, essential, all, custom:tool1,tool2
# Default: essential
# Examples:
#   MOTION_MCP_TOOLS=minimal  # Only consolidated tools and workspaces
#   MOTION_MCP_TOOLS=essential  # Consolidated tools plus search, context (default)
#   MOTION_MCP_TOOLS=all  # All available tools
#   MOTION_MCP_TOOLS=custom:motion_tasks,motion_projects,search_motion_content
MOTION_MCP_TOOLS=essential